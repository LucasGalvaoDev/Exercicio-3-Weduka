<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Weduka Exercicio 3</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WedukaEx3.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/cleave.js@1.6.0/dist/cleave.min.js"></script>
</head>
<body>
    <div class="sidebar">
        <img src="https://nubank.weduka.com.br/img/logo/logo-we-naked.png" style="width:200px"/>
        <ul class="nav flex-column">
            <li class="nav-item">
                <h5><a class="nav-link @(ViewData["ActivePage"] == "Lista" ? "active" : "")" href="@Url.Action("Index", "Home")" style="color: black"><i class="fas fa-user-alt" style="margin-right: 5px"></i> Lista de pessoas</a></h5>
            </li>
            <li class="nav-item">
                <h5><a class="nav-link @(ViewData["ActivePage"] == "Privacidade" ? "active" : "")" href="@Url.Action("Privacy", "Home")" style="color: black"><i class="fas fa-id-card" style="margin-right: 3px"></i> Privacidade</a></h5>
            </li>
        </ul>
    </div>

    <div class="top-navbar">
        <div class="toggle-sidebar">
            <div></div>
            <div></div>
            <div></div>
        </div>
        <div class="page-title">@ViewData["Title"]</div>
        <div class="search-container">
            <input type="text" class="search-input" placeholder="Espaço exclusivamente estético. Sem uso no momento">
            <div class="search-icon">
                <i class="fa fa-search"></i>
            </div>
        </div>

        <div class="user-profile">
            <img src="https://st.depositphotos.com/1537427/3571/v/450/depositphotos_35717211-stock-illustration-vector-user-icon.jpg" alt="User">
            <div class="user-info">
                <div class="name">John Doe</div>
                <div class="role">Super Admin</div>
            </div>
        </div>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
